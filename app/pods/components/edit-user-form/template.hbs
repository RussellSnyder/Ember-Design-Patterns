<form data-test-edit-user-form>
  <div class="form-group">
    <label>First Name</label>
    {{input class="form-control" value=user.firstName}}
  </div>
  <div class="form-group">
    <label>Last Name</label>
    {{input class="form-control" value=user.lastName}}
  </div>
  <div class="form-group">
    <label>Password</label>
    {{input class="form-control" value=user.password type="password"}}
  </div>
  <button type="submit" {{action "saveUser"}}>Save</button>
</form>