{{#if (has-block)}}
  {{#if isShowingExplanation}}
    <button class="d-block mt-4 mb-4 btn btn-outline-info" data-test-show {{action "toggleExplanation"}}>{{#if hideText}}{{hideText}}{{else}}Hide Explanation{{/if}}</button>
    <div data-test-explanation>
      {{yield (hash
        use-cases=(component "pattern-explanation/use-cases")
        non-cases=(component "pattern-explanation/non-cases")
        overview=(component "pattern-explanation/overview")
        references=(component "pattern-explanation/references")
      )}}
    </div>
  {{else}}
    <button class="d-block mt-4 btn btn-outline-info" data-test-hide {{action "toggleExplanation"}}>{{#if showText}}{{showText}}{{else}}Show Explanation{{/if}}</button>
  {{/if}}
{{/if}}