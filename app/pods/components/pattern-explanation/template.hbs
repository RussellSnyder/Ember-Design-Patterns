{{#if (has-block)}}
  {{#if isShowingExplanation}}
    <button class="d-block mt-4 mb-2 btn btn-outline-info" data-test-show {{action "toggleExplanation"}}>{{#if hideText}}{{hideText}}{{else}}Hide Explanation{{/if}}</button>
    <div data-test-explanation>
      {{yield}}
    </div>
  {{else}}
    <button class="d-block mt-4 btn btn-outline-info" data-test-hide {{action "toggleExplanation"}}>{{#if showText}}{{showText}}{{else}}Show Explanation{{/if}}</button>
  {{/if}}
{{/if}}