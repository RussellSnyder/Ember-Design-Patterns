<h1>{{model.text.title}}</h1>

<PatternExampleContainer @title="Amount Incrementor">
  {{amount-incrementor 
    amount=amount
    onAmountIncrement=(action "changeAmount")
  }}
</PatternExampleContainer>

<div class="pattern-example my-4">
  <h3>Rating Stars</h3>
  {{rating-stars rating=stars}}
  <br>
  {{amount-incrementor 
    amount=stars
    stepSize=0.5
    onAmountIncrement=(action "changeStars")
  }}
</div>

<PatternExplanation @showText="But why?" as | P |>
  <P.overview @text={{model.text.pattern-explanation.overview}} />
  <P.use-cases @cases={{model.text.pattern-explanation.use-cases}} />
  <P.non-cases @cases={{model.text.pattern-explanation.rabbit-holes}} />
  <P.references @references={{model.text.pattern-explanation.references}} />
</PatternExplanation>